{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "pdfmerge:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"volumes": [{
						"localPath": "${workspaceFolder}/input",
				  		"containerPath": "/input",
				  		"permissions": "rw"
					},
					{
						"localPath": "${workspaceFolder}/output",
						  "containerPath": "/output",
						  "permissions": "rw"
						},
				]
			},
			"python": {
				"file": "watcher.py"
			}
		}
	]
}